<% 
// jsonData, pageId
let baseDir = "../../../";
let page = jsonData.items[pageId];
%> 
<!DOCTYPE html>
<html>
<head>
    <%- include(baseDir+'src/ejs/_head.ejs', {pageTitle: page.title, preDesc: "", preKeywords: ""}); %> 
</head>
<body>
    <%- include(baseDir+'src/ejs/_header.ejs'); %>
    <h1><%- page.title %></h1>
    <article>
        <% for(let key in page.contents){ %> 
            <% let item = page.contents[key]; %>
            <% if(item.type=="text"){ %>
                <p><%- item.content %></p>
            <% }else if(item.type=="heading"){ %> 
                <h<%- item.level %>><%- item.content %></p>
            <% } %>
        <% } %>
    </article>
    <%- include(baseDir+'src/ejs/_footer.ejs'); %>
</body>
</html>